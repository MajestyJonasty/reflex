{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (Debug)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tools/ReFlex.TrackingServer/TrackingServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build library (Debug)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/library/src/ReFlex.Library.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build (Release)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tools/ReFlex.TrackingServer/ReFlex.TrackingServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build library (Release)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/library/src/ReFlex.Library.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64",
                "-c",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/tools/ReFlex.TrackingServer/ReFlex.TrackingServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64",
                "/PublishSingleFile false",
                "/PublishReadyToRun false"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/tools/ReFlex.TrackingServer/ReFlex.TrackingServer.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start trackingserver angular app",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}/tools/ReFlex.TrackingServer/ClientApp"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "√ Compiled successfully.|Failed to compile."
                    }
                }
            }
        },
        {
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "path": "tools/emulator",
            "options": {
                "cwd": "${workspaceRoot}/tools/emulator"
            },
            "problemMatcher": {
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "√ Compiled successfully.|Failed to compile."
                    }
                }
            },
            "label": "run emulator",
            "detail": "serve in background as preLaunchTask"
        },
        {
            "type": "npm",
            "script": "start",
            "path": "examples/basic-angular",
            "options": {
                "cwd": "${workspaceRoot}/examples/basic-angular"
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "√ Compiled successfully.|Failed to compile."
                    }
                }
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "label": "run angular example client app",
            "detail": "ng serve --port 4201"
        },
        {
            "type": "npm",
            "script": "start",
            "path": "examples/basic-react",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceRoot}/examples/basic-react"
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "Compiled successfully!|Failed to compile."
                    }
                }
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "label": "run react example client app",
            "detail": "serve react app on http://localhost:3000 "
        },        
        {
            "label": "open emulator",
            "windows": {
                "command": "start"
            },
            "linux": {
                "command": "xdg-open"
            },
            "osx": {
                "command": "open"
            },
            "args": [
                "http://localhost:4300"
            ],
            "type": "shell"
        },
        {
            "type": "npm",
            "script": "serve",
            "path": "examples/basic-vue",
            "options": {
                "cwd": "${workspaceRoot}/examples/basic-vue"
            },
            "problemMatcher": [{
                "base": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "(.*?)",
                    "endsPattern": "Compiled successfully"
                }
            }],
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "label": "run vue example client app",
            "detail": "serve vue app on http://localhost:8080"
        }
    ]
}